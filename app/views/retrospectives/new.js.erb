$('#button_timer').html("<%=j render('timer') %>");
executeTimer();

$('#posting').removeClass('hidden').addClass('posting_phase');
$('#posting').html("<%=j render('form') %>");

$('#sorting_button').removeClass('hidden').addClass('button_app top_navigation sorting_phase');
$('#sorting_button').click(function(event) {
  event.preventDefault();
  clearInterval(count);
  $('.input').removeClass('input').addClass('hidden');
  $(".list").sortable({
    axis: "y",
    cursor: "move"
  });
  
  $('#sorting_button').attr('id', 'discussion_button');
  $('#discussion_button').attr('value', 'Start Discussion!');
  $('#discussion_button').unbind('click').click(function(ev) {
    ev.preventDefault();
    $('#button_timer').html("<%=j render('timer') %>");
    executeTimer();

    $(".list").sortable({
      disabled: true
    });
    $('#discussion').removeClass('hidden').addClass('action_plans');
    $('#discussion').html("<%=j render('action_plans') %>");
    $('.posting_phase__box').addClass('discussion_phase');
    $('#discussion_button').removeClass('button_app top_navigation sorting_phase').addClass('hidden');
  });
});


